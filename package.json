{
  "name": "lastminute-typescript-test",
  "version": "0.0.1",
  "description": "Last minute test",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --port 9000 --inline --progress --profile --colors --watch --content-base src/ --mode development",
    "build": "webpack --config webpack.config.js --mode production",
    "build.prod": "webpack --config webpack.config.js --env.prod",
    "build.esnext": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build.all": "npm run build.prod && npm run build.esnext",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "webpack",
    "webpack4",
    "typescript"
  ],
  "author": "Emanuele Guidotti",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.1",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/types": "^7.9.6",
    "@types/jasmine": "2.8.7",
    "@types/jest": "^25.2.1",
    "@types/node": "7.0.0",
    "awesome-typescript-loader": "5.2.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.5.3",
    "html-loader": "^1.1.0",
    "jasmine-core": "3.1.0",
    "jest": "^25.5.2",
    "mini-css-extract-plugin": "^0.9.0",
    "raw-loader": "^4.0.1",
    "source-map-loader": "0.2.3",
    "style-loader": "^1.2.0",
    "terser-webpack-plugin": "^2.3.6",
    "ts-jest": "^25.4.0",
    "typescript": "^3.5.1",
    "webpack": "4.12.0",
    "webpack-cli": "3.0.8",
    "webpack-dev-server": "3.1.4"
  },
  "dependencies": {
    "@types/graceful-fs": "^4.1.3",
    "babel-jest": "^25.5.1",
    "babel-preset-es2015": "^6.24.1",
    "jest-css-modules": "^2.1.0",
    "karma": "^5.0.3",
    "karma-jasmine": "^3.1.1",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-webpack": "^4.0.2",
    "prettier": "^2.0.5",
    "tslint": "^6.1.2",
    "tslint-loader": "^3.5.4"
  },
  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "transform": {
      ".(ts|tsx)": "ts-jest",
      "^.+\\.(css|scss|less)$": "jest-css-modules",
      "^.+\\.html$": "<rootDir>/test/utils/htmlLoader.js"
    },
    "moduleNameMapper": {
      "^.+\\.html$": "<rootDir>/test/utils/htmlLoader.js",
      "^.+\\.(css|scss|less)$": "jest-css-modules"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node",
      "html"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "globals": {
      "NODE_ENV": "test"
    },
    "moduleDirectories": [
      "node_modules"
    ]
  }
}
